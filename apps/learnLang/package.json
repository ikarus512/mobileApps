{
  "name": "com.example.learnlang",
  "version": "1.0.0",
  "displayName": "LearnLang",
  "0001": "=== nw.js options: ==========================================================",
  "0002": "https://github.com/evshiron/nwjs-builder-phoenix/blob/master/docs/Options.md",
  "0003": "=============================================================================",
  "appName": "learnLang",
  "companyName": "ikarus512",
  "main": "./src/index.html",
  "icon": "./src/img/icon.png",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ikarus512/mobileApps.git"
  },
  "author": "ikarus512",
  "license": "GPL-3.0",
  "build": {
    "nwVersion": "lts",
    "nwFlavor": "normal",
    "output": "./../../releases/.",
    "outputPattern": "learnLang-${VERSION}-${PLATFORM}-${ARCH}",
    "packed": true,
    "targets": [
      "zip",
      "nsis",
      "nsis7z"
    ],
    "files": [
      "./src/**/*"
    ],
    "strippedProperties": [
      "build"
    ],
    "win": {
      "productName": "learnLang",
      "companyName": "ikarus512",
      "copyright": "(C) 2017 ikarus512",
      "icon": "./src/img/icon.ico"
    },
    "mac": {
      "name": "learnLang",
      "displayName": "learnLang",
      "copyright": "(C) 2017 ikarus512",
      "icon-converter-online-url": "===== https://iconverticons.com/online =====",
      "icon": "./src/img/icon.icns",
      "plistStrings": {
        "CFBundleIdentifier": "${NAME}",
        "CFBundleDocumentTypes": []
      }
    },
    "nsis": {
      "icon": "./src/img/icon.ico",
      "unIcon": "./src/img/icon.ico",
      "installDirectory": "$PROGRAMFILES\\learnLang",
      "diffUpdaters": true
    }
  },
  "scripts": {
    "dist-win": "build --tasks win-x64 .",
    "dist-all": "build --tasks win-x86,win-x64,linux-x86,linux-x64,mac-x64 --concurrent .",
    "start": "run --x64 .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "makensis": "^0.8.1",
    "makensis-cli": "^0.2.1",
    "nwjs-builder-phoenix": "^1.14.6"
  },
  "window": {
    "icon": "./src/img/icon.png"
  }
}
